<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.NovaVendaFormularioActivity">

    <TextView
        android:id="@+id/activity_nova_venda_tipo_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Tipo do Item"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/activity_nova_venda_tipo_item_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/activity_nova_venda_tipo_item_textview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_nova_venda_tipo_item_textview"
        app:layout_constraintTop_toBottomOf="@+id/activity_nova_venda_tipo_item_textview" />

    <TextView
        android:id="@+id/activity_nova_venda_preco_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="PreÃ§o do Item"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/activity_nova_venda_tipo_item_textview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_nova_venda_tipo_item_textview"
        app:layout_constraintTop_toBottomOf="@+id/activity_nova_venda_tipo_item_spinner" />

    <EditText
        android:id="@+id/activity_nova_venda_preco_item_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="R$"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/activity_nova_venda_preco_item_textview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_nova_venda_preco_item_textview"
        app:layout_constraintTop_toBottomOf="@+id/activity_nova_venda_preco_item_textview" />

    <TextView
        android:id="@+id/activity_nova_venda_quantidade_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Quantidade"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/activity_nova_venda_formulario_adicionar_carrinho_botao"
        app:layout_constraintEnd_toEndOf="@+id/activity_nova_venda_preco_item_textview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_nova_venda_preco_item_textview"
        app:layout_constraintTop_toBottomOf="@+id/activity_nova_venda_preco_item_edittext"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/activity_nova_venda_quantidade_item_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/activity_nova_venda_quantidade_item_textview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_nova_venda_quantidade_item_textview"
        app:layout_constraintTop_toBottomOf="@+id/activity_nova_venda_quantidade_item_textview" />

    <Button
        android:id="@+id/activity_nova_venda_formulario_adicionar_carrinho_botao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="186dp"
        android:layout_marginRight="186dp"
        android:text="Adicionar ao Carrinho"
        app:layout_constraintBottom_toTopOf="@+id/activity_nova_venda_formulario_para_carrinho_botao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_nova_venda_quantidade_item_edittext"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/activity_nova_venda_formulario_para_carrinho_botao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir Para Carrinho"
        app:layout_constraintEnd_toEndOf="@+id/activity_nova_venda_formulario_adicionar_carrinho_botao"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_nova_venda_formulario_adicionar_carrinho_botao"
        app:layout_constraintTop_toBottomOf="@+id/activity_nova_venda_formulario_adicionar_carrinho_botao" />

</androidx.constraintlayout.widget.ConstraintLayout>